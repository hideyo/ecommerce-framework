{
    "name": "hideyo/ecommerce-framework",
    "type": "library",
    "description": "A simple API extension for DateTime.",

    "homepage": "http://hideyo.io",
    "license": "GPL-3.0+",
    "require": {
        "php": ">=5.6.4"
    },
    "autoload": {
        "psr-4": {
            "Hideyo\\Framework\\": "src"
        }
    },
    "require-dev": {
        "monolog/monolog": "^1.22",
        "orchestra/testbench": "^3.4.2",
        "phpunit/phpunit" : "~6.2"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "./vendor/bin/phpunit; ./vendor/bin/php-cs-fixer fix -v --diff --dry-run;",
        "phpunit": "./vendor/bin/phpunit;",
        "phpcs": "./vendor/bin/php-cs-fixer fix -v --diff --dry-run;"
    }
}

